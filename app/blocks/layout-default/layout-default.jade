						div.data__container
							label.data__label Last Name
								input.data__input.data__input--text(type="text", name="name")
							label.data__label.data__label--email(for="") E-mail
								input.data__input.data__input--text.data__input--email(type="email", name="email" required)
							div.data__wrapper.gender-select
								h4.gender-select__title Gender
								input.gender-select__input.gender-select__input--radio.visually-hidden(type="radio", name="Gender" id="male")
								label.gender-select__label(for='male' tabindex="1") Male
