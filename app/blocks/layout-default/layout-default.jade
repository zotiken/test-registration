include /../node_modules/bemto.jade/bemto
include /../node_modules/jade-injected/jade-injected
include ../page/page
include ../scripts/scripts

doctype html
html(lang='ru')
	include ../head/head
	+page
		h1.page-title.visually-hidden test-page-registration
		section.registration-popup.overlay
			h2.registration-popup__title.visually-hidden form-registration
			form.registration-popup__form.form(action="post")
				div.form__block.form__block--title
					h3.form__title.form__title--form Sign up
				div.form__block.form__block--data
					h3.form__title.form__title--data New user?
					p.form__description Use the form below to create your account.
					div.form__data-wrapper.data
						div.data__container
							label.data__label First Name
								input.data__input.data__input--text(type="text", name="name" required)
							label.data__label(for="") Nationality
									div.data__wrapper-select.select
										select.data__input.data__input--select(name="Nationality")
											option(value="American" selected='selected') American
											option(value="Russian" selected='selected') Russian
											option(value="Chinese" selected='selected') Chinese
							div.data__wrapper.data-piker
								label.data__label(for="") Date of Birth
									div.data-piker__block
										div.select.select--day
											select.data-piker__select(name="day")
