.data
	&__label
		padding-top 16.3px
		display block
		font-size 12px
		font-weight 300
		line-height 14px
		color #7C7C7C
		&--email
			position relative


	&__input
		height 29.2px
		font-family Work Sans
		font-size 14px
		font-weight normal
		font-style normal
		line-height 16px
		background-color: transparent
		&--text
			width 100%
			display block
			border none
			border-bottom 0.7px solid #F2F2F2

		&--select
			width 100%
			border none
			border-bottom 0.7px solid #F2F2F2
		&--select
			width 100%
			border none
			border-bottom 0.7px solid #F2F2F2

	&__container
		width 50%
		padding-top 2px
		&:first-child
			padding-right 4px
		&:nth-child(2)
			padding-left: 6px
		@media screen and (max-width 320px)
			width 100%

	&__wrapper-select
		position relative

